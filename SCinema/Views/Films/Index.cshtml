@model IEnumerable<SCinema.Models.Film>
@{
    ViewData["Title"] = "Films (back-office)";
}
<h2 class="mb-3">Films (back-office)</h2>
<p><a class="btn btn-primary" asp-action="Create">Créer un film</a></p>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Aucun film.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr><th>Titre</th><th>Genre</th><th>Durée</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.Title</td>
                    <td>@f.Genre</td>
                    <td>@f.DureeMinutes min</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@f.Id">Éditer</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@f.Id">Détails</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@f.Id">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
