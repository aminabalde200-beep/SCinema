@model IEnumerable<SCinema.Models.Film>
@{
    ViewData["Title"] = "Accueil";
}

<!-- Bandeau héro sombre -->
<div class="hero-dark">
    <div class="mb-3">
        <i class="bi bi-film" style="font-size:48px; color:var(--accent);"></i>
    </div>
    <div class="hero-title">Réservez vos billets</div>
    <p class="hero-sub">
        Découvrez les derniers films à l'affiche et réservez vos places en quelques clics.
    </p>
</div>

<h2 class="section-title">Films à l'affiche</h2>

<div class="row row-cols-1 row-cols-md-3 g-3">
    @foreach (var f in Model)
    {
        <div class="col">
            <div class="movie-card card h-100">
                @if (!string.IsNullOrWhiteSpace(f.AfficheUrl))
                {
                    <img src="@f.AfficheUrl" class="card-img-top" alt="@f.Title" />
                }
                <div class="card-body">
                    <h5 class="card-title">@f.Title</h5>
                    <p class="card-text">
                        <small class="text-muted">@f.Genre • @f.DureeMinutes min</small><br />
                        <small class="text-muted">Sortie : @f.DateSortie.ToString()</small>
                    </p>
                    <a class="btn btn-primary"
                       asp-controller="Catalogue" asp-action="Film" asp-route-id="@f.Id">
                        Réserver
                    </a>
                </div>
            </div>
        </div>
    }
</div>
