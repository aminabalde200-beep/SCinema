<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SCinema.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SCinema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">


                    <ul class="navbar-nav flex-grow-1 align-items-center">

    <!-- Accueil -->
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Accueil</a>
    </li>

    <!-- Billets = Catalogue public -->
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Catalogue" asp-action="Index">Billets</a>
    </li>

    <!-- Rechercher (champ dans la barre) => GET /Catalogue/Index?q=... -->
    <li class="nav-item flex-grow-1">
        <form class="d-flex ms-sm-3" method="get" asp-controller="Catalogue" asp-action="Index">
            <input name="q" class="form-control me-2" type="search"
                   placeholder="Rechercher un film..." value="@Context.Request.Query["q"]" />
            <button class="btn btn-outline-primary" type="submit">Rechercher</button>
        </form>
    </li>

    <!-- Panier (uniquement si connecté) -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">Mon panier</a>
        </li>
    }

    <!-- Compte -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Compte</a>
        </li>
        <li class="nav-item">
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index","Home", new { area = "" })" method="post">
                <button class="nav-link btn btn-link text-dark" type="submit">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Compte</a>
        </li>
    }
</ul>


                    <partial name="_LoginPartial" />
                </div>


            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SCinema - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
