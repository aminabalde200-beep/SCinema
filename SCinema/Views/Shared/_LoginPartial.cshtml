@using Microsoft.AspNetCore.Identity
@using SCinema.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Connecté : un seul lien “Compte” vers la page de gestion du profil -->
        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-area="Identity" asp-page="/Account/Manage/Index"
               title="Gérer mon compte">
                Compte
            </a>
        </li>
      
    }
    else
    {
        <!-- Non connecté : un seul lien “Compte” vers la page de connexion (qui propose S’inscrire) -->
        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-area="Identity" asp-page="/Account/Login">
                Compte
            </a>
        </li>
    }
</ul>
